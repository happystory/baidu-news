extends ../layout

block content
	.top
		.logo.bg
		.mine.bg
		.add.bg
		.find.bg
	.list
		ul
			li(data-type='tuijian').current: a(href='javascript:void(0);') 推荐
			li(data-type='baijia'): a(href='javascript:void(0);') 百家
			li(data-type='bendi'): a(href='javascript:void(0);') 本地
			li(data-type='tupian'): a(href='javascript:void(0);') 图片
			li(data-type='yule'): a(href='javascript:void(0);') 娱乐
			li(data-type='shehui'): a(href='javascript:void(0);') 社会
			li(data-type='junshi'): a(href='javascript:void(0);') 军事
			li(data-type='nvren'): a(href='javascript:void(0);') 女人
			li(data-type='gaoxiao'): a(href='javascript:void(0);') 搞笑
			li(data-type='keji'): a(href='javascript:void(0);') 科技
			li(data-type='gengduo').more: a(href='javascript:void(0);') 更多
	.content
		each row in rows
			.content-news
				.imgbox
					a(href='/news/#{row.id}')
						img(src='#{row.img}', width='100%',height='68')
				.description
					.title
						a(href='/news/#{row.id}') #{row.title}
					.time #{moment(row.time).format('YYYY-MM-DD')}
	script(src='/javascripts/index.js')