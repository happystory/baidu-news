extends ../admin-layout

block content
    nav.navbar.navbar-inverse.navbar-fixed-top
        .container-fluid
            .navbar-header
                button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="/admin") 后台管理系统
            #navbar.navbar-collapse.collapse
                ul.nav.navbar-nav.navbar-right.text-center.hidemenu
                    li(data-type='tuijian').active: a(href='javascript:;') 推荐
                    li(data-type='baijia'): a(href='javascript:;') 百家
                    li(data-type='bendi'): a(href='javascript:;') 本地
    .container-fluid
        .row
            .col-sm-1.col-md-1.sidebar
                ul.nav.nav-sidebar.text-center
                    li(data-type='tuijian').active: a(href='javascript:;') 推荐
                    li(data-type='baijia'): a(href='javascript:;') 百家
                    li(data-type='bendi'): a(href='javascript:;') 本地
            .col-sm-9.col-sm-offset-1.col-md-9.col-md-offset-2.main
                .content
                    h4.
                        后台管理系统/<span>推荐</span>
                    table.table.table-hover.table-bordered.text-center
                        thead
                            tr
                                th.text-center 编号
                                th.text-center 标题
                                th.text-center 预览
                                th.text-center 修改
                                th.text-center 删除
                        tbody
                            each row in rows
                                tr(class="item-id-#{row.id}")
                                    td= row.id
                                    td= row.title
                                    td: a(target='_blank',href='../news/#{row.id}')
                                        button.btn.btn-primary(type='button') 预览
                                    td: a(href='/admin/update/#{row.id}')
                                        button.btn.btn-warning(type='button') 修改
                                    td: button.btn.btn-danger(type='button', data-id='#{row.id}') 删除
                    a(href='../admin/create')
                        button.btn.btn-success(type='button') 新建
    script(src='/javascripts/admin.js')